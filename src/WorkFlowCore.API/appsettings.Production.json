{
  "Logging": {
    "LogLevel": {
      "Default": "Warning",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "Serilog": {
    "MinimumLevel": {
      "Default": "Warning",
      "Override": {
        "Microsoft": "Warning",
        "Microsoft.AspNetCore": "Error",
        "System": "Warning"
      }
    }
  },
  "CORS": {
    "AllowedOrigins": [ "https://your-production-domain.com" ]
  },
  "ConnectionStrings": {
    "Default": "Data Source=/var/lib/workflow/workflow_prod.db",
    "WorkflowEngine": "Data Source=/var/lib/workflow/workflow_engine_prod.db"
  }
}

